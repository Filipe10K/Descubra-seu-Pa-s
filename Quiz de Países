    </div>

    <button onclick="identificarPais()">REVELAR MEU PAÍS!</button>
    <div id="result"></div>
  </div>

  <script>
    const paises = {
      "Brasil": { bandeira: "https://flagcdn.com/w320/br.png", info: "Maior país da América do Sul, famoso pelo Carnaval, futebol e Amazônia." },
      "Angola": { bandeira: "https://flagcdn.com/w320/ao.png", info: "País lusófono da África Austral, rico em petróleo e diamantes." },
      "Moçambique": { bandeira: "https://flagcdn.com/w320/mz.png", info: "Na costa do Oceano Índico, com praias paradisíacas e cultura swahili." },
      "Nigéria": { bandeira: "https://flagcdn.com/w320/ng.png", info: "Gigante da África, maior população do continente e potência em Nollywood." },
      "África do Sul": { bandeira: "https://flagcdn.com/w320/za.png", info: "Nação arco-íris, com 11 idiomas oficiais e o Cabo da Boa Esperança." },
      "Portugal": { bandeira: "https://flagcdn.com/w320/pt.png", info: "Berço do fado, pastéis de nata e da língua portuguesa." },
      "Gana": { bandeira: "https://flagcdn.com/w320/gh.png", info: "Primeiro país africano independente, famoso pelo ouro e kente." },
      "Quênia": { bandeira: "https://flagcdn.com/w320/ke.png", info: "Berço do safari, com o Monte Quênia e a Grande Migração." },
      "Egito": { bandeira: "https://flagcdn.com/w320/eg.png", info: "Civilização milenar, pirâmides e o Rio Nilo." },
      "Espanha": { bandeira: "https://flagcdn.com/w320/es.png", info: "País do flamenco, paella e touradas." }
    };

    function identificarPais() {
      const respostas = {
        moeda: document.querySelector('input[name="moeda"]:checked')?.value,
        idioma: document.querySelector('input[name="idioma"]:checked')?.value,
        continente: document.querySelector('input[name="continente"]:checked')?.value,
        populacao: document.querySelector('input[name="populacao"]:checked')?.value,
        carnaval: document.querySelector('input[name="carnaval"]:checked')?.value,
        fuso: document.querySelector('input[name="fuso"]:checked')?.value,
        ingles: document.querySelector('input[name="ingles"]:checked')?.value
      };

      if (Object.values(respostas).some(v => !v)) {
        alert("Responda todas as perguntas!");
        return;
      }

      let pais = "Outro país";
      let bandeira = "https://flagcdn.com/w320/00.png";
      let info = "Não identificado com precisão.";

      // ÁFRICA
      if (respostas.continente === "africa") {
        if (respostas.idioma === "sim") {
          if (respostas.moeda === "kwanza") { pais = "Angola"; }
          else if (respostas.moeda === "metical") { pais = "Moçambique"; }
          else { pais = "Cabo Verde / Guiné-Bissau"; info = "Países lusófonos pequenos e incríveis!"; }
        } else {
          if (respostas.moeda === "naira" && respostas.populacao === "sim") { pais = "Nigéria"; }
          else if (respostas.moeda === "rand" && respostas.ingles === "sim") { pais = "África do Sul"; }
          else if (respostas.ingles === "sim") { pais = "Gana"; }
          else { pais = "Egito"; }
        }

      // AMÉRICA DO SUL
      } else if (respostas.continente === "americasul") {
        if (respostas.idioma === "sim" && respostas.moeda === "real" && respostas.populacao === "sim" && respostas.fuso === "sim" && respostas.carnaval === "muito") {
          pais = "Brasil";
        } else {
          pais = "Argentina / Chile / outro";
          info = "País sul-americano com paisagens incríveis!";
        }

      // EUROPA
      } else if (respostas.continente === "europa") {
        if (respostas.idioma === "sim") { pais = "Portugal"; }
        else if (respostas.moeda === "euro") { pais = "Espanha"; }
        else { pais = "Outro país europeu"; }
      }

      // Buscar dados
      const dados = paises[pais] || { bandeira: "https://flagcdn.com/w320/xx.png", info: info };
      bandeira = dados.bandeira;
      info = dados.info || info;

      document.getElementById("result").innerHTML = `
        <img src="${bandeira}" alt="Bandeira" class="flag-img">
        <div class="country-name">${pais}</div>
        <div class="country-info">${info}</div>
        <p><small>Baseado nas suas respostas</small></p>
      `;
      document.getElementById("result").style.display = "block";
    }
  </script>
</body>
</html>
